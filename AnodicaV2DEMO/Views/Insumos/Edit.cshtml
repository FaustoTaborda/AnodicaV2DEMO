@model Anodica.Modelos.Insumo

@{
    ViewData["Title"] = "Editar Insumo";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-warning text-dark">
            <h3 class="card-title mb-0">Editar Insumo: @Model.InsumoNombre</h3>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="InsumoID" />

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="CodigoInsumo" class="form-label">Código</label>
                        <input asp-for="CodigoInsumo" class="form-control" />
                        <span asp-validation-for="CodigoInsumo" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="InsumoNombre" class="form-label">Nombre</label>
                        <input asp-for="InsumoNombre" class="form-control" />
                        <span asp-validation-for="InsumoNombre" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label asp-for="UnidadMedida" class="form-label">Unidad</label>
                        <select asp-for="UnidadMedida" class="form-select">
                            <option value="Un">Unidades</option>
                            <option value="Kg">Kilogramos</option>
                            <option value="Lt">Litros</option>
                            <option value="Mt">Metros</option>
                        </select>
                        <span asp-validation-for="UnidadMedida" class="text-danger"></span>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label asp-for="CantidadStock" class="form-label">Stock Actual</label>
                        <input asp-for="CantidadStock" class="form-control" type="number" step="0.01" />
                        <span asp-validation-for="CantidadStock" class="text-danger"></span>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label asp-for="CantMinimaStock" class="form-label">Stock Mínimo</label>
                        <input asp-for="CantMinimaStock" class="form-control" type="number" step="0.01" />
                        <span asp-validation-for="CantMinimaStock" class="text-danger"></span>
                    </div>
                </div>

                <div class="mt-4 border-top pt-3 text-end">
                    <a asp-action="Index" class="btn btn-secondary me-2">Cancelar</a>
                    <button type="submit" class="btn btn-warning fw-bold">Guardar Cambios</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <partial name="_Notificaciones" />
}